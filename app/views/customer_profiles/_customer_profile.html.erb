<div id="<%= dom_id customer_profile %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= customer_profile.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= customer_profile.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this customer profile", customer_profile, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this customer profile', edit_customer_profile_path(customer_profile), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
