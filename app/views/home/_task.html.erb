<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="2020-03-16" class="text-gray-500"><%= task.created_at %></time>
    <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"><%= task.task_category.title %></a>
  </div>
  <div class="group relative">
    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
      <%= link_to task do %>
        <span class="absolute inset-0"></span>
        <%= task.title %>
      <% end %>
        
    </h3>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= excerpt(task.raw_description, 50) %></p>
  </div>
  <div class="relative mt-8 flex items-center gap-x-4">
    <%= image_tag task.customer_profile.picture, class: "h-10 w-10 rounded-full bg-gray-50" %>
    <div class="text-sm leading-6">
      <p class="font-semibold text-gray-900">
        <a href="#">
          <span class="absolute inset-0"></span>
          <%= task.customer_profile.name %>
        </a>
      </p>
      <p class="text-gray-600">Co-Founder / CTO</p>
    </div>
  </div>
  <div class="relative mt-8 flex items-center gap-x-4">
    <%= link_to "Quero fazer!", task, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
</article>