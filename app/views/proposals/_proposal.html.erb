<div id="<%= dom_id proposal %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= proposal.amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Task:</strong>
    <%= proposal.task_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= proposal.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this proposal", proposal, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this proposal', edit_proposal_path(proposal), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
